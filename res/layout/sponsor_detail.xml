<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" android:layout_height="wrap_content">
  <RelativeLayout
	  android:layout_width="fill_parent"
	  android:layout_height="?android:attr/listPreferredItemHeight"       
	  android:orientation="vertical" android:gravity="center_horizontal" 
	  android:padding="10sp">
	<com.github.droidfu.widgets.WebImageView
		android:id="@+id/sponsor_image_detail"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="#FFF" 
		android:padding="10sp"
		android:layout_margin="10sp" />
	<TextView
		android:id="@+id/sponsor_name_detail" 
		android:padding="10dp"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"		 
		android:layout_below="@id/sponsor_image_detail"
		android:layout_margin="10sp" 
		style="@style/wcListSeparator" />
	<TextView 
		android:id="@+id/sponsor_description_detail"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_below="@id/sponsor_name_detail"
		android:layout_margin="10sp" 
		style="@style/detail_description"  />
	<Button
		android:id="@+id/sponsor_url_detail" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:layout_below="@id/sponsor_description_detail"
		android:padding="10dp"
		android:text="@string/sponsor_url_button" 
		android:textSize="21sp"/>	
  </RelativeLayout>
</ScrollView>